# Auto detect text files and perform LF normalization
* text=auto

# Explicitly declare text files
*.ts text eol=lf
*.tsx text eol=lf
*.js text eol=lf
*.jsx text eol=lf
*.json text eol=lf
*.md text eol=lf
*.yml text eol=lf
*.yaml text eol=lf
*.rs text eol=lf
*.toml text eol=lf
*.sh text eol=lf
*.c text eol=lf
*.h text eol=lf

# PowerShell scripts
*.ps1 text eol=crlf

# Windows batch files
*.bat text eol=crlf
*.cmd text eol=crlf

# Binary files
*.png binary
*.jpg binary
*.wav binary
*.exe binary
*.dll binary
*.so binary
*.ko binary
